<Window x:Class="CarRepairDesktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRepairDesktop.Views"
        mc:Ignorable="d"
        Height="800" Width="1200"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Header-->
        <Grid Grid.Row="0"
              Grid.ColumnSpan="2"
              Background="{StaticResource regular}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Image Grid.Row="0"
                   Grid.Column="0"
                   Source="/Images/logo.png"
                   Margin="10"/>

            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Text="Автомастерские"
                       Style="{StaticResource Header}"/>

        </Grid>

        <!--Vertical menu-->
        <Grid Grid.Column="0"
              Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0"
                    Content="Клиенты"
                    x:Name="btnClients"
                    Click="btnClients_Click"/>
            <Button Grid.Row="1"
                    Content="Автомобили"
                    x:Name="btnCars"
                    Click="btnCars_Click"/>
            <Button Grid.Row="2"
                    Content="Мастерские"
                    x:Name="btnWorkshops"
                    Click="btnWorkshops_Click"/>
            <Button Grid.Row="3"
                    Content="Мастера"
                    x:Name="btnEmployees"
                    Click="btnEmployees_Click"/>
            <Button Grid.Row="4"
                    Content="Обслуживание"
                    x:Name="btnOrders"
                    Click="btnOrders_Click"/>
            <Button Grid.Row="5"
                    Content="Услуги"
                    x:Name="btnServices"
                    Click="btnServices_Click"/>
        </Grid>

        <!--Main frame-->
        <Frame Grid.Row="1"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               x:Name="mainFrame"/>
    </Grid>
</Window>
